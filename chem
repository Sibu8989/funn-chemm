const fakeAnswers = {
  "what is water": "Water is a compound made up of two hydrogen atoms and one oxygen atom ‚Äì H‚ÇÇO. It's essential for all known forms of life!",
  "what is acid": "Acids are substances that donate protons (H‚Å∫ ions) in aqueous solutions. They have a pH less than 7.",
  "what is base": "Bases are substances that accept protons or donate hydroxide ions (OH‚Åª). They usually have a pH above 7.",
  "what is atom": "An atom is the smallest unit of matter that retains the identity of a chemical element. It consists of a nucleus (protons + neutrons) and electrons."
};

function searchAnswer() {
  const input = document.getElementById('searchInput').value.toLowerCase();
  const answerText = document.getElementById('answerText');

  if (fakeAnswers[input]) {
    answerText.textContent = fakeAnswers[input];
  } else {
    answerText.textContent = "Oops! I don't know that yet, but I'm learning every day!";
  }
}
